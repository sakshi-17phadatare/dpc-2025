public class Solution {
    public int findDuplicate(int[] arr) {
        int slow = arr[0];
        int fast = arr[0];
        while (true) {
            slow = arr[slow];
            fast = arr[arr[fast]];
            if (slow == fast) break;
        }
        slow = arr[0];
        while (slow != fast) {
            slow = arr[slow];
            fast = arr[fast];
        }

        return slow;
    }

    public static void main(String[] args) {
        Solution finder = new Solution();
        int[] arr = {3, 1, 3, 4, 2};
        System.out.println("Duplicate number is: " + finder.findDuplicate(arr));
    }
}
